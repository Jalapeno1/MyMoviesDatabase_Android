<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonas.mymoviesdatabase_android" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Movies"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name=".MovieDetailsActivity"
            android:label="@string/title_activity_movie_details" >
        </activity>
        <activity
            android:name=".SearchMovieActivity"
            android:label="@string/title_activity_search_movie" >
        </activity>
        <activity
            android:name=".AddMovieActivityNEW"
            android:label="@string/title_activity_add_movie_activity_new" >
        </activity>
        <activity
            android:name=".AllMoviesActivity"
            android:label="Front" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllMoviesActivity_GRIDVIEW"
            android:label="@string/title_activity_all_movies_activity__gridview" >
        </activity>
    </application>

</manifest>
