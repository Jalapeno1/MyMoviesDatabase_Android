<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:id="@+id/imageView_MOVIE_POSTER"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Lord of The Rings: The Return of The King"
        android:textSize="20sp"
        android:id="@+id/textView_MOVIE_TITLE"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="YEAR:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_YEAR"
        android:layout_below="@+id/textView_MOVIE_TITLE"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RUNTIME:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_RUNTIME"
        android:layout_below="@+id/textView_MOVIE_YEAR"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GENRE:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_GENRE"
        android:layout_below="@+id/textView_MOVIE_RUNTIME"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DIRECTOR:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_DIRECTOR"
        android:layout_below="@+id/textView_MOVIE_GENRE"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />


</RelativeLayout>