<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jonas.mymoviesdatabase_android.MovieDetailsActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="225dp"
        android:id="@+id/imageView_MOVIE_POSTER"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="6dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="Lord of The Rings: The Return of The King"
        android:textSize="22sp"
        android:id="@+id/textView_MOVIE_TITLE"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="YEAR:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_YEAR"
        android:layout_below="@+id/textView_MOVIE_TITLE"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RUNTIME:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_RUNTIME"
        android:layout_below="@+id/textView_MOVIE_YEAR"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RATED:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_RATED"
        android:layout_below="@+id/textView_MOVIE_RUNTIME"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DIRECTOR:"
        android:textSize="16sp"
        android:id="@+id/textView_MOVIE_DIRECTOR"
        android:layout_below="@+id/textView_MOVIE_RATED"
        android:layout_toEndOf="@+id/imageView_MOVIE_POSTER" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="SYNOPSIS"
        android:textSize="16sp"
        android:id="@+id/textView_PLOT"
        android:layout_below="@+id/imageView_MOVIE_POSTER"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ACTORS"
        android:textSize="16sp"
        android:id="@+id/textView_ACTORS"
        android:layout_below="@+id/textView_PLOT"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="WRITERS"
        android:textSize="16sp"
        android:id="@+id/textView_WRITERS"
        android:layout_below="@+id/textView_ACTORS"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="GENRE"
        android:textSize="16sp"
        android:id="@+id/textView_GENRE"
        android:layout_below="@+id/textView_WRITERS"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="IMDB RATING"
        android:textSize="16sp"
        android:id="@+id/textView_IMDB_RATING"
        android:layout_below="@+id/textView_GENRE"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="COUNTRY"
        android:textSize="16sp"
        android:id="@+id/textView_COUNTRY"
        android:layout_below="@+id/textView_IMDB_RATING"
        android:layout_alignParentStart="true" />


</RelativeLayout>
