<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/cv">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/rel_layout">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="105dp"
            android:id="@+id/imageView_ADD_POSTER"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Lord of The Rings: The Return of The King"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/textView_ADD_TITLE"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView_ADD_POSTER" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="YEAR:"
            android:textSize="12sp"
            android:textColor="@color/button_material_dark"
            android:id="@+id/textView_ADD_YEAR"
            android:layout_below="@+id/textView_ADD_TITLE"
            android:layout_toEndOf="@+id/imageView_ADD_POSTER" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="RUNTIME:"
            android:textSize="13sp"
            android:textColor="@color/button_material_dark"
            android:id="@+id/textView_ADD_RUNTIME"
            android:layout_below="@+id/textView_ADD_YEAR"
            android:layout_toEndOf="@+id/imageView_ADD_POSTER" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="GENRE:"
            android:textSize="13sp"
            android:textColor="@color/button_material_dark"
            android:id="@+id/textView_MOVIE_GENRE"
            android:layout_below="@+id/textView_ADD_RUNTIME"
            android:layout_toEndOf="@+id/imageView_ADD_POSTER" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DIRECTOR:"
            android:textSize="13sp"
            android:textColor="@color/button_material_dark"
            android:id="@+id/textView_ADD_DIRECTOR"
            android:layout_below="@+id/textView_MOVIE_GENRE"
            android:layout_toEndOf="@+id/imageView_ADD_POSTER" />

        <ImageButton
            android:id="@+id/imgButtonDelete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_clear_search_api_disabled_holo_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>